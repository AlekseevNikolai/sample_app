<%provide(:title, @user.name)%>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <div class="gravatar">
            <%= image_tag @user.avatar.url if @user.avatar? %>
        </div>
        <%= @user.name %>
      </h1>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.cocks.any? %>
      <h3>Cocks feed (<%= @user.cocks.count %>)</h3>
      <ol class="microposts">
        <%= render @user.cocks %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>
